[settings]
screenchange-reload = true

[bar/main]
bottom = true

height = 40
padding = 5
module-margin = 2
line-size = 3

font-0 = FiraSans-Regular:pixelsize=15
background = #00000000
foreground = #ffffff

modules-left = workspaces title
modules-right = pulseaudio backlight battery date time

[module/workspaces]
type = internal/xworkspaces
label-active = " %name% "
label-active-foreground = #3bcf1d
label-empty = " %name% "
label-empty-foreground = #5555ff

[module/title]
type = internal/xwindow

[module/pulseaudio]
type = internal/pulseaudio
label-volume = V %percentage%%
label-muted = M

[module/backlight]
type = internal/xbacklight
label = L %percentage%%

[module/battery]
type = internal/battery
label-charging = C %percentage%%
label-discharging = B %percentage%%

[module/date]
type = internal/date
label = %date%
date = %a %d %b

[module/time]
type = internal/date
label = %time%
internal = 3
time = %H:%M
