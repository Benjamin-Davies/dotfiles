[settings]
screenchange-reload = true

[bar/main]
bottom = true
height = 30
padding = 7
module-margin = 2
line-size = 3

font-0 = DejaVu Sans:pixelsize=12
background = ${xrdb:color0}
foreground = #fff

modules-left = workspaces title
modules-right = pulseaudio date time

[module/workspaces]
type = internal/xworkspaces
label-active = " %name% "
label-active-underline = ${xrdb:color2}
label-occupied = " %name% "
label-empty = " %name% "

[module/title]
type = internal/xwindow

[module/pulseaudio]
type = internal/pulseaudio
label-volume = Volume: %percentage%%
label-muted = Muted

[module/date]
type = internal/date
label = %date%
date = %a %d %b

[module/time]
type = internal/date
label = %time%
internal = 3
time = %H:%M
