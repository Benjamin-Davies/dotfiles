#!/bin/sh

# Color Codes
RESET="[m"
BOLD="[1m"

BK="[30m"
R="[31m"
G="[32m"
Y="[33m"
B="[34m"
M="[35m"
C="[36m"
GY="[37m"


# Username and Hostname
echo "$BOLD$Y$(whoami)$GY@$Y$(hostname)$RESET"


# OS/Distro
# Borrowed from pfetch
distro="Unknown OS"

case $(uname) in
  Linux*)
    if command -v lsb_release > /dev/null
    then
      # lsb_release will give us the distro name
      distro=$(lsb_release -sd)
    elif [ -d /system/app ] \
      && [ -d /system/priv-app ]
    then
      distro="Android"
    else
      distro="Linux"
    fi
  ;;

  Darwin*)
    distro = "macOS"
  ;;
esac

distro=${distro##[\"\']}
distro=${distro%%[\"\']}

echo "  $BOLD$C$distro$RESET"


# Date and time
date +"    $GY%Y-$BOLD$B%m-%d$RESET $GY%G-${M}W%V-%u"
date +"      $BOLD$G%H:%M$RESET$GY:%S %z %Z$RESET"
