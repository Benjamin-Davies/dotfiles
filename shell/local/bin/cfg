#!/bin/sh

# Crash on error
set -e

# Sort common input
dotfiles="${DOTFILES:-$HOME/dotfiles}"

command=$1
if [ -z $command ]; then
    echo No command given
    echo Use \`cfg help\` to get a list of available commands
    exit 1
fi
shift 1

# Helper functions

# Subcommand functions
help() {
    # TODO
    echo TODO: Help text here
}

# Subcommands
case $command in
    help)
        help
        ;;
    *)
        echo Command $command not recognized
        help
        ;;
esac
